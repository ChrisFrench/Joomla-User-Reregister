<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system">
	<name>System - Force Password Change</name>
	<author>www.sourcecoast.com</author>
	<creationDate>2010/10/15</creationDate>
	<copyright>Copyright (C) 2010 SourceCoast. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@sourcecoast.com</authorEmail>
	<authorUrl>http://www.sourcecoast.com</authorUrl>
	<version>1.3</version>
	<description>This plugin will see if a user's lastvisitDate is 0000-00-00 00:00:00.  If so, the user will be forced to the edit profile page until they change their password.</description>
	<languages>
		<language tag="en-GB">en-GB.plg_system_forcepasswordchange.ini</language>
	</languages>
	<files>
		<filename plugin="forcepasswordchange">forcepasswordchange.php</filename>
		<filename>forcepasswordchange/assets/cmsmarketconnect/cmsmarketconnect.php</filename>
		<filename>forcepasswordchange/assets/cmsmarketconnect/cmsmconnect_logo.png</filename>
		<filename>forcepasswordchange/assets/cmsmarketconnect/index.html</filename>
		<filename>forcepasswordchange/assets/cmsmarketconnect/template.php</filename>
	</files>
	<administration>
		<languages>
			<language tag="en-GB">en-GB.plg_system_forcepasswordchange.ini</language>
		</languages>
	</administration>
	<params addpath="/plugins/system/forcepasswordchange/assets/cmsmarketconnect">
		<param name="forcepasswordchange" label="Version Information" description="Up to date version, support, and review information from CMS Market." type="cmsmarketconnect" />
	</params>
</install>
